<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".location.LocationEntryFragment">

    <EditText
        android:id="@+id/main_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Zipcode"
        app:layout_constraintBottom_toTopOf="@+id/main_editText"
        app:layout_constraintEnd_toEndOf="@+id/main_editText"
        app:layout_constraintStart_toStartOf="@+id/main_editText" />

    <Button
        android:id="@+id/main_forecast_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Forecast"
        app:layout_constraintEnd_toEndOf="@+id/main_editText"
        app:layout_constraintStart_toStartOf="@+id/main_editText"
        app:layout_constraintTop_toBottomOf="@+id/main_editText" />


</androidx.constraintlayout.widget.ConstraintLayout>